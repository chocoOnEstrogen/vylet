{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": ["es2017"],
		"declaration": false,
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"~interfaces/*": ["src/interfaces/*"],
			"~classes/*": ["src/classes/*"]
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.d.ts", "./types/**/*.d.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
